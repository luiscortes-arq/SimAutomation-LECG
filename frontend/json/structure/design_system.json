    "source": "frontend/css/json/variables.json",
    "mapping": {
        "colors": {
            "css_file": "frontend/css/tokens/colors.css",
            "usage": "var(--color-name)"
        },
        "spacing": {
            "css_file": "frontend/css/tokens/spacing.css",
            "usage": "var(--spacing-size)"
        },
        "typography": {
            "css_file": "frontend/css/tokens/typography.css",
            "usage": "var(--font-prop)"
        }
